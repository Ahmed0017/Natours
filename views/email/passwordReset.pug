extends baseEmail

block content
  img(src='https://www.natours.dev/img/logo-green-round.png' style=' float: right; width: 50px; height: 50px;')
  p(style='clear: right;') Hi #{firstName},
  p 
  | We received a request to reset your password.
  br
  | Enter the following password reset code:
  p(style='font-size: 22px; font-weight: bold; padding-top: 5px; margin-top: 5px;') #{code}
  p Alternatively, you can directly reset your passwrd.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset your password
  p If you didn't forget your password, Please ignore this email!