mixin reviewCard()
  each review, i in tour.reviews
    .reviews__card
      .reviews__avatar
        img.reviews__avatar-img(src=`/img/users/${review.user.photo}`, alt=`${review.name}`)
        h6.reviews__user= review.user.name
      p.reviews__text= review.review
      .reviews__rating
        each star, i in [1, 2, 3, 4, 5]
          svg.reviews__star.reviews__star--active
            use(xlink:href='/img/icons.svg#icon-star' class=`reviews__star--${review.rating >= star ? 'active' : 'inactive'}`)
